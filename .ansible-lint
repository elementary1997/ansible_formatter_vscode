---
# Ansible-lint configuration with Ansible project structure validation
# Note: Line length (150 chars) is configured in .yamllint file
profile: production

# Excluded paths - служебные папки и конфиги
exclude_paths:
  - .ansible/
  - .cache/
  - .git/
  - .github/
  - .vscode/
  - .idea/
  - __pycache__/
  - "*.egg-info/"
  - venv/
  - .venv/
  - env/
  - node_modules/
  - out/
  - dist/
  - build/
  - test_extension/
  - docs/
  - "*.md"
  - .yamllint
  - .ansible-lint
  - .pre-commit-config.yaml

# Rules that will only warn
warn_list:
  - command-instead-of-module
  - command-instead-of-shell
  - no-changed-when
  - risky-file-permissions

# Strict mode for production
strict: true
