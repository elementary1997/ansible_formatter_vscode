{
  "name": "ansible-lint-helper",
  "displayName": "Ansible Lint Helper",
  "description": "Run pre-commit and ansible-lint with inline errors and auto-fix via Quick Fix menu",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:ansible",
    "onCommand:ansible-lint.run",
    "onCommand:ansible-lint.runAll",
    "onCommand:ansible-lint.runPreCommit",
    "onCommand:ansible-lint.fixCurrent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ansible-lint.run",
        "title": "Ansible Lint: Run on Current File"
      },
      {
        "command": "ansible-lint.runAll",
        "title": "Ansible Lint: Run on All Files"
      },
      {
        "command": "ansible-lint.runPreCommit",
        "title": "Ansible Lint: Run pre-commit"
      },
      {
        "command": "ansible-lint.fixCurrent",
        "title": "Ansible Lint: Fix Current File"
      },
      {
        "command": "ansible-lint.fixWithTool",
        "title": "Ansible Lint: Fix with ansible-lint --fix"
      },
      {
        "command": "ansible-lint.ignoreRule",
        "title": "Ansible Lint: Ignore Rule"
      }
    ],
    "configuration": {
      "title": "Ansible Lint Helper",
      "properties": {
        "ansible-lint.executablePath": {
          "type": "string",
          "default": "",
          "description": "Custom path to ansible-lint executable (leave empty for auto-detection)"
        },
        "ansible-lint.preCommitPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to pre-commit executable (leave empty for auto-detection)"
        },
        "ansible-lint.autoFixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix issues when saving files"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ansible-lint-explorer",
          "title": "Ansible Lint",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "ansible-lint-explorer": [
        {
          "type": "webview",
          "id": "ansible-lint.resultsPanel",
          "name": "Lint Results"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.14.37",
    "typescript": "^4.9.5"
  }
}
